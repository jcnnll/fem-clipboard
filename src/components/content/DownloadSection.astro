---
import CtaLink from "../ui/CtaLink.astro";

import type { CTAItem } from "@/types/CTAItem";

interface Props {
  ctas: CTAItem[];
}

const { ctas } = Astro.props;
---

<section id="download">
  <div class="download-container">
    <div class="download-content-container">
      <div class="download-content">
        <h2>Clipboard for iOS and Mac OS</h2>
        <p>
          Available for free on the App Store. Download for Mac or iOS, sync
          with iCloud and youâ€™re ready to start adding to your clipboard.
        </p>
      </div>
      <div class="download-cta">
        {
          ctas.map((item) => (
            <CtaLink text={item.label} href={item.link} type={item.type} />
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .download-container {
    width: 19.4375rem;
    margin-top: 10.875rem;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-400);
  }

  .download-content-container {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-350);
  }

  .download-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .download-cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
  }

  /* Tablet: 768px and up */
  @media (min-width: 768px) {
    .download-container {
      margin-top: 9.625rem;
      width: 38.5rem;
      gap: var(--spacing-350);
    }

    .download-content-container {
      gap: var(--spacing-300);

      p {
        font: var(--text-preset-8);
        letter-spacing: var(--text-preset-8-letter-spacing);
      }
    }

    .download-cta {
      width: 100%;
      display: flex;
      flex-direction: row;
      gap: 1rem;
    }
  }

  @media (min-width: 1000px) {
    .download-container {
      margin-top: 10rem;
      width: 45.625rem;
      gap: var(--spacing-350);
    }

    .download-content-container {
      gap: var(--spacing-350);
    }
  }
</style>
